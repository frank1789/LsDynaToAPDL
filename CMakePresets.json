{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 25,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "ninja-default",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "installDir": "${sourceDir}/out/install/${presetName}",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            },
            "architecture":{
                "value": "x64",
                "strategy": "external"
            }
        },
        {
            "name": "xcode-default",
            "hidden": true,
            "generator": "Xcode",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "installDir": "${sourceDir}/out/install/${presetName}",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "VCPKG_TARGET_ARCHITECTURE": "x64",
                "VCPKG_CRT_LINKAGE": "dynamic",
                "VCPKG_LIBRARY_LINKAGE":"dynamic"
            },
            "architecture":{
                "value": "x64",
                "strategy": "external"
            }
        },
        {
            "name": "x64-windows-debug",
            "inherits": "ninja-default",
            "displayName": "Windows x64 debug configuration",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "BUILD_TESTING": "ON"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "x64-windows-release--with-debug-info",
            "inherits": "ninja-default",
            "displayName": "Windows x64 release with debug info configuration",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "BUILD_TESTING": "ON"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "x64-windows-release",
            "inherits": "ninja-default",
            "displayName": "Windows release configuration",
            "description": "This build is only available on Windows",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "BUILD_TESTING": "ON"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "ninja-macos-debug",
            "inherits": "ninja-default",
            "displayName": "MacOS ninja Debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "BUILD_TESTING": "ON",
                "VCPKG_TARGET_TRIPLET": "x64-osx"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            }
        },
        {
            "name": "ninja-macos-release-with-debug-info",
            "inherits": "ninja-default",
            "displayName": "MacOS ninja Release with Debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "BUILD_TESTING": "ON",
                "VCPKG_TARGET_TRIPLET": "x64-osx"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            }
        },
        {
            "name": "ninja-macos-release",
            "inherits": "ninja-default",
            "displayName": "MacOS ninja Release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "BUILD_TESTING": "ON",
                "VCPKG_TARGET_TRIPLET": "x64-osx"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            }
        },
        {
            "name": "xcode-macos-debug",
            "inherits": "xcode-default",
            "displayName": "MacOS Xcode Debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "BUILD_TESTING": "ON",
                "VCPKG_TARGET_TRIPLET": "x64-osx"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            }
        },
        {
            "name": "xcode-macos-release-with-debug-info",
            "inherits": "xcode-default",
            "displayName": "MacOS Xcode Release with Debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "BUILD_TESTING": "ON",
                "VCPKG_TARGET_TRIPLET": "x64-osx"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            }
        },
        {
            "name": "xcode-macos-release",
            "inherits": "xcode-default",
            "displayName": "MacOS Xcode Release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "BUILD_TESTING": "ON",
                "VCPKG_TARGET_TRIPLET": "x64-osx"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "xcode-lsdynatoapld-debug",
            "displayName": "LsDynaToApdl Debug",
            "configurePreset": "xcode-macos-debug"
        },
        {
            "name": "xcode-lsdynatoapld-release-with-debug-info",
            "displayName": "LsDynaToApdl Release With Debug Info",
            "configurePreset": "xcode-macos-release-with-debug-info"
        },
        {
            "name": "xcode-lsdynatoapld-release",
            "displayName": "LsDynaToApdl Release",
            "configurePreset": "xcode-macos-release"
        },
        {
            "name": "ninja-lsdynatoapld-debug",
            "displayName": "LsDynaToApdl Debug",
            "configurePreset": "ninja-macos-debug"
        },
        {
            "name": "ninja-lsdynatoapld-release-with-debug-info",
            "displayName": "LsDynaToApdl Release With Debug Info",
            "configurePreset": "ninja-macos-release-with-debug-info"
        },
        {
            "name": "ninja-lsdynatoapld-release",
            "displayName": "LsDynaToApdl Release",
            "configurePreset": "ninja-macos-release"
        }
    ],
    "testPresets": [
        {
            "name": "default",
            "hidden": true,
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true,
                "scheduleRandom": true
            }
        }
    ]
}
