#ifndef LSDYNA_TO_APDL_CONVERTER_VERSION_H
#define LSDYNA_TO_APDL_CONVERTER_VERSION_H

#include <sstream>

constexpr char kVersionMajor[] = "@VERSION_MAJOR@";
constexpr char kVersionMinor[] = "@VERSION_MINOR@";
constexpr char kVersionPatch[] = "@VERSION_PATCH@";
constexpr char kBuild[] = "@VERSION_SHA1@";

std::string compact_version() {
  std::stringstream v;
  v << kVersionMajor << "." << kVersionMinor << "." << kVersionPatch << "\t"
    << "build: " << kBuild;
  return v.str();
}

#endif  // LSDYNA_TO_APDL_CONVERTER_VERSION_H